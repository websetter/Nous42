<script type="x/template" id="vue-item-image-carousel">
  <div itemscope="itemscope" itemtype="https://schema.org/Thing">
    <div class="row">
      <div class="col-xs-12 col-sm-9">
        <div id="single-carousel" class="owl-carousel owl-theme owl-single-item" ref="single">
          <div v-for="image in singleImages">
            <a :href="image.url" data-lightbox="single-big-image-gallery">
              <img :alt="getAltText(image)" class="owl-lazy" :title="getItemName()" :data-src="image.url" itemprop="image">
            </a>
          </div>
        </div>
      </div>
      <div class="col-xs-12 col-sm-3">
      <div id="thumbs" class="owl-thumbs owl-carousel owl-theme owl-single-item" ref="thumbs" v-if="carouselImages > 1">
          <img
              @click="goTo(index)"
              class="thumb"
              v-bind:class="{ 'active': currentItem === index }"
              :src="imagePreview.url"
              :alt="getAltText(imagePreview)"
              :title="getItemName()"
              v-for="(imagePreview, index) in carouselImages"
          >
      </div>
      </div>
    </div>
  </div>
</script>
