{% import "Ceres::PageDesign.Macros.LayoutContainer" as LayoutContainer %}

{% set numberOfCols = config('Ceres.footer.number_of_cols') %}
{% set displayedCategories = [] %}

<footer>

  <div class="container footer-content">
    <div class="row">
      <div class="col-xs-12 col-sm-6 col-md-3">
          <h4>{{ trans('Ceres::Template.footerColumnTitle1') }}</h4>
          <ul class="list-unstyled">
            <li><a href="{{ urls.gtc }}">{{ trans('Ceres:Template.checkoutGtc') }}</a></li>
            <li><a href="{{ urls.privacyPolicy }}">{{ trans('Ceres:Template.footerColumnVorteil3') }}</a></li>
            <li><a href="{{ urls.cancellationRights }}">{{ trans('Ceres:Template.cancellationRights') }}</a></li>
            <li><a href="{{ urls.shippingscosts }}">{{ trans('Ceres:Template.itemShippingCosts') }}</a></li>
            <li><a href="{{ urls.contact }}">{{ trans('Ceres:Template.contact') }}</a></li>
            <li><a href="{{ urls.legalDisclosure }}">{{ trans('Ceres:Template.footerLegalDisclosure') }}</a></li>
          </ul>
      </div>
      {% for i in 1..numberOfCols %}
        <div class="col-xs-12 col-sm-6 col-md-3">
            <h4>{{ trans('Ceres::Template.footerColumnTitle' ~ i) }}</h4>
            <ul class="list-unstyled">
              {% set footerCategories = config('Ceres.footer.col_' ~ i ~ '_categories') | find("[0-9]+") %}
              {% for catID in footerCategories %}

                {% set cat = services.category.get(catID, lang) %}

                {% if cat is not null %}
                  {% set displayedCategories = displayedCategories | merge([catID]) %}
                  <li>
                    <a href="{{ services.category.getURL( cat ) }}">
                      {{ cat.details.first.name }}</a>
                  </li>
                {% endif %}

              {% endfor %}
            </ul>
        </div>
      {% endfor %}
      <div class="col-xs-12 col-sm-6 col-md-3">
          <h4>{{ trans('Ceres::Template.footerColumnTitle3') }}</h4>
          <ul class="list-unstyled">
            <li>{{ trans('Ceres::Template.footerColumnVorteil1') }}</li>
            <li>{{ trans('Ceres::Template.footerColumnVorteil2') }}</li>
            <li>{{ trans('Ceres::Template.footerColumnVorteil3') }}</li>
            <li>{{ trans('Ceres::Template.footerColumnVorteil4') }}</li>
          </ul>
      </div>
      <div class="col-xs-12 col-sm-6 col-md-3">
          <h4>{{ trans('Ceres::Template.footerColumnTitle4') }}</h4>
          <ul class="list-unstyled">
          </ul>
          <p>&copy; {{ "now" | date("Y") }} nous42 | WERK38<br><small>{{ trans('Ceres::Template.footerColumnPreisHinweis') }}</small></p>
      </div>
    </div>
  </div>
</footer>
